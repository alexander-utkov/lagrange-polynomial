<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Размер шрифта по умолчанию для определенных элементов управления -->
  <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="FontSize" Value="14" />
  </Style>
  <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
    <Setter Property="FontSize" Value="14" />
  </Style>

  <Color x:Key="Elevation">#E6E6E6</Color>

  <SolidColorBrush x:Key="ElevationBackground" Color="{StaticResource Elevation}"/>

  <CornerRadius x:Key="SubstantiveCornerRadius">12</CornerRadius>
</ResourceDictionary>